{
    "name": "clarkwinkelmann/flarum-ext-featured-discussions",
    "description": "Schedule featured status for discussions",
    "keywords": [
        "flarum",
        "featured"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.0",
        "dragonmantank/cron-expression": "^3.1"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-featured-discussions",
        "forum": "https://discuss.flarum.org/d/28997"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\FeaturedDiscussions\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Featured Discussions",
            "category": "feature",
            "icon": {
                "name": "fas fa-certificate",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            }
        }
    }
}
